$config_branch = 'devel'

 
node 'logstash.katzinger.info' {
	
	$logstash_config_hash = {
		'LS_CONF_DIR' => '/etc/logstash/conf.d/',
 		'LS_USER'     => 'logstash',
  		'LS_GROUP'    => 'logstash',
	}

	class { 'java':
		distribution => 'jdk',  
	}
	class { 'logstash': 
		package_url   => 'https://download.elastic.co/logstash/logstash/packages/centos/logstash-1.5.4-1.noarch.rpm',   
		init_defaults => $logstash_config_hash,
		require       => Class[java],
	}
#firewalld module from crayfishx bzw fork fÃ¼r firewalld_port resource nicht funktionsfÃ¤hig
